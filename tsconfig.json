{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "paths": {
      "*": ["*", "node_modules/@types_mfe/*"],
      "src/*": ["./src/*"]
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2015",
    "jsx": "react-jsx",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*",
    "./server/**/*",
    "./types/**/*"
  ]
}
