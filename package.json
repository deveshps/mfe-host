{
  "name": "tcg-mfes-boilerplate",
  "version": "0.1.1",
  "description": "MFe host boiler plate ",
  "main": "index.js",
  "bin": "./bin/cli.js",
  "scripts": {
    "dev": "DEV_SERVER=true webpack-dev-server --hot --port 3000 --config config/webpack.client.js",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "build:pre": "mkdir -p node_modules/@types_mfe/types",
    "build:client": "npm run build:pre && webpack --progress --config config/webpack.client.js",
    "build:server": "webpack --progress --config config/webpack.server.js",
    "node:start": "node dist/server/server.js",
    "start": "npm run build && pm2-runtime dist/server/server.js",
    "deploy": "NODE_ENV=production npm run pm2:app",
    "reload": "npm run pm2:stop && npm run pm2:start",
    "pm2:app": "npm run build && npm run pm2:stop && npm run pm2:start",
    "pm2:start": "pm2 --name tcg-mfe-host-boilerplate --time start npm -- run node:start",
    "pm2:stop": "pm2 delete tcg-mfe-host-boilerplate || true",
    "pm2:ls": "pm2 ls",
    "clean": "rm -rf dist",
    "blame": "git log -S",
    "hist": "git log --oneline | grep -i",
    "follow": "git log --follow --oneline"
  },
  "author": "Devesh Pal Singh <deveshps@dewsolutions.in>",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.4",
    "react-router-dom": "^6.11.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.5",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.5",
    "@module-federation/node": "^0.14.0",
    "@types/node": "^18.16.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "babel-loader": "^9.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.4",
    "cssnano": "^6.0.1",
    "html-webpack-plugin": "^5.5.1",
    "mini-css-extract-plugin": "^2.7.6",
    "pm2": "^5.3.0",
    "postcss-loader": "^7.3.0",
    "postcss-preset-env": "^8.4.1",
    "style-loader": "^3.3.3",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2",
    "webpack-dev-server": "^4.13.3",
    "webpack-manifest-plugin": "^5.0.0",
    "webpack-node-externals": "^3.0.0",
    "webpack-remote-types-plugin": "^0.2.7"
  }
}
